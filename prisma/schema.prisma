datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum EventType {
  INDIVIDUAL
  DOBLES_VARONIL
  DOBLES_FEMENIL
  DOBLES_MIXTO
}

enum EntryStatus {
  NEED_PARTNER
  PENDING
  COMPLETE
  WAITLIST
  CANCELED
}

enum PricingTier {
  EARLY
  REGULAR
  LATE
}

enum CapacityCountingMode {
  COUNT_COMPLETE_ONLY
  COUNT_ALL
}

enum OnFullAction {
  ADD_TO_WAITLIST
  REJECT
}

enum RosterOrderingMode {
  STATUS_THEN_NAME
  NAME_THEN_STATUS
}

enum AfterPartnerDeadlineAction {
  MOVE_TO_WAITLIST
  CANCEL_ENTRY
}

model Tournament {
  id                   String             @id @default(cuid())
  name                 String
  timezone             String
  usdToMxnRate          Decimal            @db.Decimal(10, 2)
  mxnRoundingIncrement Int
  earlyPricingStart    DateTime
  earlyPricingEnd      DateTime
  regularPricingStart  DateTime
  regularPricingEnd    DateTime
  latePricingStart     DateTime
  latePricingEnd       DateTime
  earlyPriceUsd        Decimal            @db.Decimal(10, 2)
  regularPriceUsd      Decimal            @db.Decimal(10, 2)
  latePriceUsd         Decimal            @db.Decimal(10, 2)
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  policy               TournamentPolicy?
  events               Event[]
  registrations        Registration[]
  waivers              WaiverVersion[]
}

model TournamentPolicy {
  id                         String                    @id @default(cuid())
  tournamentId               String                    @unique
  rosterVisibleStatuses      EntryStatus[]             @default([COMPLETE, PENDING, NEED_PARTNER])
  rosterOrderingMode         RosterOrderingMode        @default(STATUS_THEN_NAME)
  capacityCountingMode       CapacityCountingMode      @default(COUNT_COMPLETE_ONLY)
  onFullAction               OnFullAction              @default(ADD_TO_WAITLIST)
  afterPartnerDeadlineAction AfterPartnerDeadlineAction @default(MOVE_TO_WAITLIST)
  partnerDeadline            DateTime?
  tournament                 Tournament                @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
}

model Event {
  id            String              @id @default(cuid())
  tournamentId  String
  name          String
  eventType     EventType
  capacity      Int?
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
  tournament    Tournament          @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  policyOverride EventPolicyOverride?
  entries       EventEntry[]
}

model EventPolicyOverride {
  id                         String                     @id @default(cuid())
  eventId                    String                     @unique
  rosterVisibleStatuses      EntryStatus[]?
  rosterOrderingMode         RosterOrderingMode?
  capacityCountingMode       CapacityCountingMode?
  onFullAction               OnFullAction?
  afterPartnerDeadlineAction AfterPartnerDeadlineAction?
  partnerDeadline            DateTime?
  event                      Event                      @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model Player {
  id          String        @id @default(cuid())
  firstName   String
  lastName    String
  email       String        @unique
  createdAt   DateTime      @default(now())
  registrations Registration[]
  teamMemberships TeamMember[]
}

model Registration {
  id           String       @id @default(cuid())
  tournamentId String
  playerId     String
  manageToken  String       @unique
  createdAt    DateTime     @default(now())
  tournament   Tournament   @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  player       Player       @relation(fields: [playerId], references: [id], onDelete: Cascade)
  entries      EventEntry[]
}

model EventEntry {
  id           String        @id @default(cuid())
  registrationId String
  eventId      String
  status       EntryStatus   @default(PENDING)
  pricingTier  PricingTier
  amountUsd    Decimal       @db.Decimal(10, 2)
  amountMxn    Int
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  registration Registration  @relation(fields: [registrationId], references: [id], onDelete: Cascade)
  event        Event         @relation(fields: [eventId], references: [id], onDelete: Cascade)
  partnerInvite PartnerInvite?
  teamMembers  TeamMember[]
}

model PartnerInvite {
  id           String     @id @default(cuid())
  entryId      String     @unique
  token        String     @unique
  invitedEmail String?
  createdAt    DateTime   @default(now())
  entry        EventEntry @relation(fields: [entryId], references: [id], onDelete: Cascade)
}

model TeamMember {
  id        String     @id @default(cuid())
  entryId   String
  playerId  String
  createdAt DateTime   @default(now())
  entry     EventEntry @relation(fields: [entryId], references: [id], onDelete: Cascade)
  player    Player     @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([entryId, playerId])
}

model WaiverVersion {
  id         String     @id @default(cuid())
  tournamentId String
  titleEn    String
  bodyEn     String
  titleEs    String
  bodyEsMx   String
  isActive   Boolean    @default(true)
  createdAt  DateTime   @default(now())
  tournament Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
}
